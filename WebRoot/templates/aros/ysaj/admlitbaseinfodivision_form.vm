#parse("common/extensions-v14.vm")
<link href="$contextpath/component/uploadify/uploadify.css" rel="stylesheet" type="text/css" /> 
<style type='text/css'>
    input {
    	line-height:20px;
    	border:1px solid #95B8E7;
    }
</style>
<script type="text/javascript" src="$contextpath/component/uploadify/jquery.uploadify-3.1.min.js"></script>
<script type="text/javascript" src="$contextpath/templates/aros/common/arosCommon.js"></script>
<script type="text/javascript" src="$contextpath/templates/aros/ysaj/js/admlitbaseinfodivision_form.js"></script>

<form id="ysajDivisionForm" method="post">
	
	<div id="tt" class="easyui-tabs" style="width:100%;height:auto;">
		<div id="tab_1" title="案件基本信息">
        	<table class="list">
        		<!--隐藏属性start-->
        			<input type="hidden" id="acaseid" name="acaseid" value="$!{admlitbaseinfo.acaseid}"/><!--案件ID-->
					<input type="hidden" id="caseid" name="caseid" value="$!{admlitbaseinfo.acaseid}"/><!--案件ID-->
					<input type="hidden" id="undertakeid" name="undertakeid" />
        		<!--隐藏属性end-->
        		<tr>
        			<th width="13%">审理阶段：</th>
        			<td width="37%">
        				<span>$!{admlitbaseinfo.stage}</span>
        			</td>
        			<th width="13%">关联案件号：</th>
        			<td width="37%">
        				<span>$!{admlitbaseinfo.relaacaseid}</span>
        			</td>
        		</tr>
        		<tr>
        			<th>本机关案号：</th>
        			<td>
        				<span>$!{admlitbaseinfo.lcasecode}</span>
        			</td>
        			<th>司法机关案号：</th>
        			<td>
        				<span>$!{admlitbaseinfo.rcasecode}</span>
        			</td>
        		</tr>
        		<tr>
        			<th>收案方式：</th>
        			<td colspan="3">
        				<span>$!{admlitbaseinfo.rectype}</span>
        			</td>
                </tr>
        		<tr>
        			<th>收案人：</th>
        			<td>
        				<span>$!{admlitbaseinfo.receiver}</span>
        			</td>
        			<th>收案时间：</th>
        			<td>
        				<span>$!{admlitbaseinfo.rectime}</span>
        			</td>
        		</tr>
        		<tr>
        			<th>受案法院：</th>
        			<td colspan="3">
        				<span>$!{admlitbaseinfo.rdeptname}</span>
        			</td>
        		</tr>
        		<tr>
        			<th>案由：</th>
        			<td colspan="3">
        				<span>$!{admlitbaseinfo.casereason}</span>
        			</td>
                </tr>
        		<tr>
        			<th>当事人类型：</th>
        			<td>
        				<span>$!{admlitbaseinfo.partytype}</span>
        			</td>
        			<th>原告（上诉人）：</th>
        			<td>
        				<span>$!{admlitbaseinfo.plaintiff}</span>
        			</td>
        		</tr>
        		<tr>
        			<th>第三人（上诉人）：</th>
        			<td>
        				<span>$!{admlitbaseinfo.thirdname}</span>
        			</td>
        			<th>第一被告（上诉人）：</th>
        			<td>
        				<span>$!{admlitbaseinfo.defendant}</span>
        			</td>
        		</tr>
        		<tr>
        			<th>开庭地点：</th>
        			<td>
        				<span>$!{admlitbaseinfo.hearplace}</span>
        			</td>
        			<th>开庭时间：</th>
        			<td>
        				<span>$!{admlitbaseinfo.heartime}</span>
        			</td>
        		</tr>
        		<tr>
                    <th>相关附件：</th>
        			<td colspan="3" valign="top" style="height:40px" id="filetd"></td>
                </tr>
            </table>
		</div>
    	
    	<div id="tab_3" title="分案处理"  data-options="selected:true">
        	<table class="list">
				<tr>
                    <th>承办人：</th>
                    <td colspan="3">
                        <input id="undertaker" class="easyui-textbox" name="undertaker" style="width:250px;" 
							required="true" missingMessage="请选择承办人" data-options="validType:{length:[0,10]}"
							readonly="true"/>
						<font color=red>*</font>
						<a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'" 
							style="width:10%" onclick="selectUser(parent.$('#userdiv'), 'undertaker')">选择</a>
                    </td>
                </tr>
				<tr>
                    <th>协办人：</th>
                    <td colspan="3">
                        <input id="assessor" class="easyui-textbox" name="assessor" style="width:250px;" 
							data-options="validType:{length:[0,10]}"/>&nbsp;&nbsp;&nbsp;
						<a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'" 
							style="width:10%" onclick="selectUser(parent.$('#userdiv'), 'assessor')">选择</a>
                    </td>
                </tr>
				<tr>
                    <th>相关附件：</th>
        			<td colspan="3" valign='top' style="height:40px" id="divisionfiletd">
    					<img src="component/jquery-easyui-1.4/themes/icons/files.png" style="float:right;cursor:pointer" 
							onClick="clickUploadDiv('DIVISION', 'divisionfiletd')"/>
                    </td>
                </tr>
            </table>
		</div>
	</div>
</form>
	
<!--上传附件层-->
<div id="uploadifydiv"></div>
	
<!--案件信息层-->
<div id='userdiv'></div>